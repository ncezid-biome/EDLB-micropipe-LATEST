nextflow_process {

    name "Test Process nextpolish_LR"
    script "main.nf"
    process "nextpolish_LR"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                outdir = "ModuleTestResults"
                nextpolish_threads = 4
	            nextpolish_task_SR = "1212"
	            nextpolish_task_LR = "55"
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0] = Channel.fromPath( "${params.samplesheet}", checkIfExists:true )
                .splitCsv(header:true, sep:',')
                input[0].view()
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
