nextflow_pipeline {

    name "Test Pipeline main.nf"
    script "main.nf"

    test("Whole Pipeline Test: Should run without failures") {

        when {
            params {
                // define parameters here. MAKE SURE PATHS MATCH YOUR OWN!!!
                outdir = "ModuleTestResults"
                samplesheet="/scicomp/home-pure/suj7/EDLB/test_samplesheet.csv"
                basecalling = true
                demultiplexing = false
                gpu = true
                fast5 = "/scicomp/home-pure/suj7/EDLB/test_data/fast5_tiny"
                fastq = false
	        datadir = false
                demultiplexer = 'guppy'
                guppy_gpu_folder = "/apps/x86_64/guppy/6.3.8-gpu/bin/"
                guppy_cpu_folder = "/apps/x86_64/guppy/6.3.8-gpu/bin/" 
		// MAKE SURE YOU'RE USING THE RIGHT MODELS:
	        guppy_config_gpu = "dna_r9.4.1_450bps_sup.cfg"
                guppy_config_cpu = "dna_r9.4.1_450bps_fast.cfg"
                kit = false
                flowcell = false
                guppy_gpu_device = "auto"
                guppy_num_callers = 8
                guppy_cpu_threads_per_caller = 1
                guppy_basecaller_args = "--recursive --trim_barcodes -q 0 --disable_qscore_filtering"
                guppy_barcode_kits= "SQK-RBK004"
                guppy_barcoder_threads = 2
                qcat_args = ""
                skip_pycoqc = false
                skip_qc = true
                skip_rasusa = true
                skip_porechop = false
                skip_filtering = false
                rasusa_coverage = 100
                filtering = "japsa"
                porechop_args = ""
                porechop_threads = 4
                japsa_args = "--lenMin 1000 --qualMin 4"
                filtlong_args = "--min_length 1000 --keep_percent 90"
                flye_args = ""
                flye_threads = 4
                polisher = "medaka"
                racon_nb = 4
                racon_args = "-m 8 -x -6 -g -8 -w 500"
                racon_threads = 4
		//MAKE SURE YOU'RE USING THE RIGHT MODELS:
	        medaka_model = "r941_min_sup_g638"
                medaka_threads = 8
                nextpolish_threads = 4
	        nextpolish_task_SR = "1212"
	        nextpolish_task_LR = "55"
	        skip_illumina = true
                fixstart_args = ""
                skip_fixstart = false
                quast_threads = 1
                quast_args = ""
                skip_quast = false
            }
        }

        then {
            assert workflow.success
        }

    }

}
